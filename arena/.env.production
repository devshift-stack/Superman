# Production Environment Configuration for Mini-Arena
# Copy this to .env and fill in your actual API keys

PORT=3333

# OpenAI API Configuration
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-REPLACE_WITH_YOUR_OPENAI_KEY
OPENAI_MODEL=gpt-4

# Anthropic Claude API Configuration
# Get your key from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-REPLACE_WITH_YOUR_ANTHROPIC_KEY
ANTHROPIC_MODEL=claude-sonnet-4-5-20250929
ANTHROPIC_VERSION=2023-06-01

# ElevenLabs Text-to-Speech Configuration
# Get your key from: https://elevenlabs.io/app/settings/api-keys
ELEVENLABS_API_KEY=REPLACE_WITH_YOUR_ELEVENLABS_KEY
# Default voice: Bella (female, friendly, German-compatible)
ELEVENLABS_VOICE_ID=EXAVITQu4vr4xnSDxMaL

# Policy Configuration (STOP-Gate)
# Set to true to allow pricing and legal questions
ALLOW_PRICING=false
ALLOW_LEGAL=false

# Optional: Logging Configuration
# Uncomment to enable detailed logging
# LOG_LEVEL=debug
# LOG_FILE=/var/log/mini-arena/app.log
